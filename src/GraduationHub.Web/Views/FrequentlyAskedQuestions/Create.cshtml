@using GraduationHub.Web.Controllers
@model GraduationHub.Web.Models.FrequentlyAskedQuestions.FrequentlyAskedQuestionCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>FrequentlyAskedQuestion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.EditorForModel()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @(Html.ActionLink<FrequentlyAskedQuestionsController>(c => c.Index(), "Back to List"))
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section styles{
    <style>
        input#Question { max-width: 560px; }
        input#Order{max-width: 70px;  }
    </style>
}