@model GraduationHub.Web.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div>
    <i class="fa fa-graduation-cap fa-5x pull-left "></i>
    <h2>Welcome to KEYS GradHub!</h2>
    <p>
     
    </p>

</div>
<hr />
<div class="row">
    <div class="col-md-5 col-md-offset-1" >
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Log in.</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*                <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>

            }
        </section>
    </div>
    <div class="col-md-5" >
        <h4>New User?</h4>
        
        <p>
            If you received your invitation email, but haven't completed the registration process click the button below to continue.
        </p>
        <p>
            <a class="btn btn-success" href="@Url.Action("Register")"><i class="fa fa-user fa-lg"></i> Register as a new user</a>            
        </p>
        
            <h4 style="margin-top:50px">Did you forget your password?</h4>
            
            <p>
                Sometimes it happens, and if it has, no problem. If you are a registered user of GradHub, you can reset your password here.
            </p>
            <p>

                <a class="btn btn-warning" href="@Url.Action("ForgotPassword")"><i class="fa fa-gear fa-lg"></i> Reset password</a>

            </p>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}