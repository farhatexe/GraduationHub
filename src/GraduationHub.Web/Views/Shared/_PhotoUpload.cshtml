@model GraduationHub.Web.Models.CheckList.ImageModel

@{
    string imageSource = Model.HasImage ? Model.ImageString : @"\content\images\male_silhouette.png";
}

<div class="fileinput fileinput-new" data-provides="fileinput">
    <div class="fileinput-new thumbnail" style="height: 350px; width: 400px;">

        <img src="@imageSource" alt="...">
        
    </div>
    <div class="fileinput-preview fileinput-exists thumbnail" style="max-height: 350px; max-width: 400px;"></div>
    <div>
        <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" accept='image/*' name="file"></span>
        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a> <button  class="btn btn-success fileinput-exists" type="submit">Save</button>
    </div>
</div>