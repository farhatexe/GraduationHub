@model GraduationHub.Web.Domain.StudentPictureType

@using (Html.BeginForm("UploadPicture", "CheckList", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("type", Model)

    <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-new thumbnail" style="max-height: 350px; max-width: 400px;">

            <img src="@Url.Action("GetPicture", "CheckList", new {type = @Model})" alt="" />

        </div>
        <div class="fileinput-preview fileinput-exists thumbnail" style="max-height: 350px; max-width: 400px;"></div>
        <div>
            <span class="btn btn-primary btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" accept='image/*' name="file"></span>
            <a href="#" class="btn btn-primary fileinput-exists" data-dismiss="fileinput">Remove</a> <button class="btn btn-success fileinput-exists" type="submit">Save</button>
        </div>
    </div>
}
