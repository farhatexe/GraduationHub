<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - K.E.Y.S. Graduate Hub</title>
    @Styles.Render("~/Content/css")
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("styles", false)
</head>
<body ng-app="graduateHubApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><span class="fa fa-graduation-cap"></span> Graduate Hub</a>
                
 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.Action("Menu", "Home")
                </ul>
                @Html.Action("Login", "Home")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container alert-container"></div>
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - KEYS Graduate Hub</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/libraries")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @Html.Partial("_Alerts")
    @RenderSection("scripts", false)
</body>
</html>

