@using GraduationHub.Web.Controllers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    string currentAction = ViewContext.RouteData.Values["action"].ToString();    
}
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <!-- Default panel contents -->
            <div class="panel-heading"><span class="glyphicon glyphicon-ok"></span> Check List</div>

            <!-- List group -->
            <div class="list-group">
                @(Html.ActionLink<CheckListController>(c => c.GraduateInformation(), "Graduate Information", new { @class = currentAction == "GraduateInformation" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.Biography(), "Biography", new { @class = currentAction == "Biography" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.ExpressionOfThanks(), "Expressions of Thanks", new { @class = currentAction == "ExpressionOfThanks" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.SlideShowCaption(), "Slideshow Caption", new { @class = currentAction == "SlideShowCaption" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.SeniorPortrait(), "Senior Portrait", new { @class = currentAction == "SeniorPortrait" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.BabyPicture(), "Baby School Picture", new { @class = currentAction == "BabyPicture" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.ToddlerPicture(), "Toddler School Picture", new { @class = currentAction == "ToddlerPicture" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.ElementaryPicture(), "Elementary School Picture", new { @class = currentAction == "ElementaryPicture" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.MiddleSchoolPicture(), "Middle School Picture", new { @class = currentAction == "MiddleSchoolPicture" ? "list-group-item active" : "list-group-item" }))
                @(Html.ActionLink<CheckListController>(c => c.HighSchoolPicture(), "High School Picture", new { @class = currentAction == "HighSchoolPicture" ? "list-group-item active" : "list-group-item" }))
               </div>
        </div>
    </div>

    <div class="col-md-8">
        @RenderBody()
    </div>
</div>

@section scripts
{
    @RenderSection("scripts", false)
}