@using System.Globalization
@using GraduationHub.Web.Data
@using GraduationHub.Web.Infrastructure
@model int?
@{
    var dbContext = Context.GetContainer().GetInstance<ApplicationDbContext>();

    var graduatingClasses = dbContext.GraduatingClasses.ToList();

    SelectListItem[] availableClasses = graduatingClasses.Select(u => new SelectListItem
    {
        Text = u.Description,
        Value = u.Id.ToString(CultureInfo.InvariantCulture),
        Selected = u.Id == Model
    }).ToArray();
}

@Html.DropDownList("", availableClasses, new {@class = "form-control"})