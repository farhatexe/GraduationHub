@model GraduationHub.Web.Models.CheckList.StudentExpressionModel

    @{
        ViewBag.Title = "Expression of Thanks";
        Layout = "~/Views/Shared/_CheckListLayout.cshtml";
    }

<div>
    <i class="fa fa-file-text-o fa-5x pull-left "></i>
    <h2>Expression of Thanks</h2>
    <p>This is where you say all of your "Thanks" to God. family, friends, teachers...etc.</p>
    <p><em>These will be published in the graduation programs. Please keep your text between <strong>75 - 100 words.</strong></em></p>
</div>
<hr />
<div>
    @using (Html.BeginForm("ExpressionOfThanks", "CheckList", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.EditorFor(m => m.Text)

            <p>You have <span id="counter"></span> words left.</p>
            
            <button type="submit"  class="btn btn-success">
                <span class="fa fa-save fa-fw fa-lg"></span> Save
            </button>
            
        </div>
    }
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/simplyCountable")

    <script>
        $(document).ready(function() {
            $("#Text").simplyCountable({
                counter: '#counter',
                countType: 'words',
                maxCount: @Model.TextMaxLength,
                countDirection: 'down',
                strictMax: true
            });

            
        })
    </script>
}