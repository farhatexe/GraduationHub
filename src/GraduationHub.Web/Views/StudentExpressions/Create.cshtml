@using GraduationHub.Web.Controllers
@model GraduationHub.Web.Models.StudentExpressions.StudentExpressionCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StudentExpression</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.EditorForModel()
        
        <p>You have <span id="counter"></span> words left.</p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @(Html.ActionLink<StudentExpressionsController>(c => c.Index(), "Back to List"))
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/simplyCountable")
    
    <script>
        $(document).ready(function() {
            $("#Text").simplyCountable({
                counter: '#counter',
                countType: 'words',
                maxCount: 200,
                countDirection: 'down',
                strictMax: true
            });
        })
    </script>
}
