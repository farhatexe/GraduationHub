@using GraduationHub.Web.Controllers
@model IEnumerable<GraduationHub.Web.Domain.GraduatingClass>

@{
    ViewBag.Title = "Index";
}

<h2>Graduating Class</h2>

<p>
    Use this page to begin creating a Graduating Class. This will need to be done prior to setting up invitations.
</p>

<p>
    @(Html.ActionLink<GraduatingClassesController>(c => c.Create(), "Create New"))
</p>

<table class="table table-striped table-bordered" id="graduatingClasses">
    <thead>
        <tr>
            <th>
                Graduating Class Description
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/datatables")

    <script>
        $(document).ready(function() {
            $('#graduatingClasses').DataTable({
                order: [[0, 'asc']],
                processing: true,
                serverSide: true,
                stateSave: true,
                ajax: {
                    url: 'GraduatingClasses/IndexTable'
                },
                columnDefs: [
                   {
                       targets: [1],
                       searchable: false,
                       className: 'text-center'
                   }],
                columns: [
                    { data: 'description' },
                    {
                        orderable: false,
                        render: function (data, type, row) {

                            var template = _.template("<a title='Edit Graduating Class' data-toggle='tooltip' data-placement='top' href='/GraduatingClasses/Edit/<%= dT_RowId %>'>" +
                                "<span class='glyphicon glyphicon-pencil'/></a>&nbsp;&nbsp;&nbsp;" +
                                "<a title='Delete Graduating Class' data-toggle='tooltip' data-placement='top' href='/GraduatingClasses/Delete/<%= dT_RowId %>'>" +
                                "<span class='glyphicon glyphicon-remove'/></a>", { dT_RowId: row.dT_RowId });

                            return template;

                        }
                    }
                ]
            });
        });


    </script>
}